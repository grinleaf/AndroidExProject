<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_trade"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/bazzi"/>
    <TextView
        android:id="@+id/tv_tradetitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_trade"
        android:text="tradetitle"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="16dp"/>
    <TextView
        android:id="@+id/tv_tradeplace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tradetitle"
        android:layout_alignLeft="@id/tv_tradetitle"
        android:text="동, 게시일자"
        android:textSize="10sp"
        android:textColor="#FFaaaaaa"
        />
    <TextView
        android:id="@+id/tv_tradecharge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_tradeplace"
        android:layout_alignLeft="@id/tv_tradetitle"
        android:text="가격"
        android:textSize="15sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/layout_bubbleset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_trade"
        android:layout_alignParentRight="true"
        android:padding="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_bubble"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_bubble" />

        <TextView
            android:id="@+id/tv_bubblecount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_toRightOf="@id/iv_bubble"
            android:text="0"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_bubblecount"
            android:src="@drawable/icon_heart" />

        <TextView
            android:id="@+id/tv_heartcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="6dp"
            android:layout_toRightOf="@id/heart"
            android:text="0"
            android:textSize="18sp" />
    </LinearLayout>






</RelativeLayout>