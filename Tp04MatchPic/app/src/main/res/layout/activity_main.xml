<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:gravity="center"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/btn_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center">

        <ImageButton
            android:id="@+id/btn01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:background="@drawable/button_start"/>
        <ImageButton
            android:id="@+id/btn02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/btn01"
            android:background="@drawable/button_howto"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/img_layout"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_below="@id/btn_layout"
        android:padding="16dp">

        <ImageView
            android:id="@+id/animal01"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/a_ele"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/animal02"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/a_frog"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/animal03"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/a_pig"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/animal04"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentBottom="true"
            android:src="@drawable/a_lion"
            android:clickable="true"/>

        <ImageView
            android:id="@+id/animal05"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:src="@drawable/a_monkey"
            android:clickable="true"/>
    </RelativeLayout>


    <ImageView
        android:id="@+id/board_imgv"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/q_board"
        android:layout_below="@id/img_layout"
        android:layout_centerInParent="true"/>
    <ImageView
        android:id="@+id/board_ele"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/b_ele"
        android:layout_below="@id/img_layout"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/board_frog"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/b_frog"
        android:layout_below="@id/img_layout"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/board_lion"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/b_lion"
        android:layout_below="@id/img_layout"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/board_monkey"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/b_monkey"
        android:layout_below="@id/img_layout"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>
    <ImageView
        android:id="@+id/board_pig"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:src="@drawable/b_pig"
        android:layout_below="@id/img_layout"
        android:layout_centerInParent="true"
        android:visibility="invisible"/>

</RelativeLayout>